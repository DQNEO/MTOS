<mt:setvar name="page_title" value="<__trans phrase="OAuth authentication">">
<mt:setvarblock name="html_head" append="1">
<style type="text/css">
.dialog .actions-bar {
    width: 610px;
    margin: 0;
    padding: 0;
    float: left;
    text-align: left;
}
*+html .dialog .actions-bar { width: 440px; }
</style>
</mt:setvarblock>
<mt:include name="dialog/header.tmpl">

<mt:if name="error_authorization">

    <p><__trans phrase="Failed to get response from [_1], ([_2])" params="twitter%%get_authorization_url"/></p>

    <div class="actions-bar">
        <div class="actions-bar-inner pkg actions">
            <button
                onclick="closeDialog(); return false"
                type="submit"
                accesskey="x"
                class="cancel"
                title="<__trans phrase="Close (x)">"
                ><__trans phrase="Close"></button>
        </div>
    </div>

<mt:else>

<form class="posttweet_oauth_dialog" method="post" action="<mt:var name="script_url">">
    <input type="hidden" name="__mode" value="get_access_token_posttweet" />
    <input type="hidden" name="magic_token" value="<mt:var name="magic_token">" />
    <input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
    <p>
    <__trans phrase="Authorize this plugin and enter the PIN#." />
    <a href="<mt:var name="access_url">" target="_blank"><__trans phrase="Get PIN#" /></a>
    </p>
    <input type="text" name="posttweet_pin" id="posttweet_pin" value="<mt:var name="posttweet_pin" escape="html">" />
    <input type="hidden" name="access_url" value="<$mt:var name="access_url" escape="html"$>" />
    <input type="hidden" name="request_token" value="<$mt:var name="request_token" escape="html"$>" />
    <input type="hidden" name="request_token_secret" value="<$mt:var name="request_token_secret" escape="html"$>" />

    <div class="actions-bar">
        <div class="actions-bar-inner pkg actions">
            <button
                type="submit"
                title="<__trans phrase="Done">"
                class="action primary-button close"
                ><__trans phrase="Done"></button>
            <button
                onclick="closeDialog(); return false"
                type="submit"
                accesskey="x"
                class="cancel"
                title="<__trans phrase="Close (x)">"
                ><__trans phrase="Close"></button>
        </div>
    </div>
</form>

</mt:if>

<mt:include name="dialog/footer.tmpl">
